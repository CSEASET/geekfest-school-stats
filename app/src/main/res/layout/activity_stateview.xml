<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.helpinghands.foryou.yearlist"
    android:weightSum="1">
    <TextView
        android:text="Should the GOVT. spend on this State? POLL NOW!!!"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="@dimen/subject_list_margin_bottom"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:id="@+id/subject_list"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical">

            <TextView
                android:text="Choose School Statistics By:"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="@dimen/subject_list_margin_bottom"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:onClick="clickHandler"
                android:layout_height="wrap_content"
                android:tag="fact"
                android:text="Availability of Facilities Within School Premises"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="match_parent"
                android:onClick="clickHandler"
                android:layout_height="wrap_content"
                android:tag="build"
                android:text="Type of School Building"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:onClick="clickHandler"
                android:layout_height="wrap_content"
                android:tag="manage"
                android:text="Type of Management"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="match_parent"
                android:onClick="clickHandler"
                android:layout_height="wrap_content"
                android:tag="cate"
                android:text="Different Categories of School"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="match_parent"
                android:onClick="clickHandler"
                android:layout_height="wrap_content"
                android:tag="enrol"
                android:text="Enrollment in unrecognised schools"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="match_parent"
                android:onClick="clickHandler"
                android:layout_height="wrap_content"
                android:tag="habitat"
                android:text="School facilities in habitations"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal" />
       <Button
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>